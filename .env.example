# ===========================================
# IPS Freight Platform - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# -------------------------------------------
# Database Configuration
# -------------------------------------------
POSTGRES_USER=ips_user
POSTGRES_PASSWORD=ips_password
POSTGRES_DB=ips_freight
DATABASE_URL=postgresql://ips_user:ips_password@localhost:5432/ips_freight

# -------------------------------------------
# Redis Configuration
# -------------------------------------------
REDIS_URL=redis://localhost:6379

# -------------------------------------------
# Authentication
# -------------------------------------------
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_TO_A_SECURE_RANDOM_STRING
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# -------------------------------------------
# API Configuration
# -------------------------------------------
NODE_ENV=development
API_PORT=3001
API_URL=http://localhost:3001

# CORS - comma separated origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -------------------------------------------
# Frontend Configuration
# -------------------------------------------
VITE_API_URL=http://localhost:3001/api
VITE_APP_NAME="IPS Freight Platform"

# -------------------------------------------
# Mileage/Routing Service
# -------------------------------------------
# Using free OSRM demo server (for development only)
# For production, self-host OSRM or use paid service
OSRM_URL=http://router.project-osrm.org

# Geocoding (Nominatim - free, rate limited)
NOMINATIM_URL=https://nominatim.openstreetmap.org

